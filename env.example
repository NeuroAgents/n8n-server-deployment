# Основные настройки n8n
N8N_PORT=8080
N8N_PROTOCOL=http
N8N_HOST=localhost
N8N_ENCRYPTION_KEY=YOUR_SECRET_ENCRYPTION_KEY

# Настройки для внешнего доступа с использованием ngrok
WEBHOOK_TUNNEL_URL=https://your-ngrok-url.ngrok.io
N8N_HOST_WEBHOOK_TUNNEL_URL=https://your-ngrok-url.ngrok.io
WEBHOOK_URL=https://your-ngrok-url.ngrok.io/
N8N_EDITOR_BASE_URL=https://your-ngrok-url.ngrok.io

# Настройки базы данных (по умолчанию SQLite)
DB_TYPE=sqlite
DB_PATH=./database.sqlite

# Настройки для SMTP (отправка почты)
# N8N_EMAIL_MODE=smtp
# N8N_SMTP_HOST=smtp.example.com
# N8N_SMTP_PORT=587
# N8N_SMTP_USER=user@example.com
# N8N_SMTP_PASS=password
# N8N_SMTP_SENDER=n8n@example.com

# Дополнительные настройки
N8N_DIAGNOSTICS_ENABLED=false
N8N_HIRING_BANNER_ENABLED=false
N8N_VERSION_NOTIFICATIONS_ENABLED=false 